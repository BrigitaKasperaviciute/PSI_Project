@{
    ViewData["Title"] = "Privacy Policy";
}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="~/css/RegistrationStyle.css">
        <title>@ViewData["Title"]</title>
    </head>

    <body>
        <header class="ribbon">
            <div class="Name">
                <a class="mudli">Mudli</a>
            </div>
            <a href="#" class="contactUs-button">Contact us</a>
        </header>

        <form method="post">
            <div class="registration-form">
                <header class="container">
                    <h2>Create an Account</h2>
                </header>
                <!-- User Information -->
                <div class="form-group">
                    <label for="Input.Name">Name:</label>
                    <input type="text" id="Input.Name" class="form-control" required />
                    <!-- <span class="text-danger"></span> -->
                    <label for="Input.Surname">Surname:</label>
                    <input type="text" id="Input.Surname" class="form-control" required />
                    <!-- <span class="text-danger"></span> -->
                    <label for="Input.Password">Password:</label>
                    <input type="password" id="Input.Password" class="form-control" required />
                    <!-- <span class="text-danger"></span> -->
                    <label for="Input.Email">Email:</label>
                    <input type="email" id="Input.Email" class="form-control" required />
                    <!-- <span class="text-danger"></span> -->
                </div>
                <div class="form-group1">
                    <!-- Faculty Selection -->
                    <label for="Input.Faculty">Faculty:</label>
                    <select id="Input.Faculty" class="form-control" required>
                        <option value="" disabled selected>Select faculty</option>
                        <!-- Add options based on selected faculty -->
                    </select>
                    <span class="text-danger"></span>

                    <!-- Specialization Selection -->
                    <label for="Input.Specialization">Specialization:</label>
                    <select id="Input.Specialization" class="form-control" required>
                        <option value="" disabled selected>Select specialization</option>
                        <!-- Add options based on selected faculty -->
                    </select>
                    <span class="text-danger"></span>
                </div>
                <button type="submit" class="btn-primary">Register</button>
                <p style="margin-top: 10px;">
                    <a href="#" class="login-link">
                        <span style="color: #f5eff5;">Already have an account? </span>
                        Log in here...
                    </a>
                </p>
            </div>
        </form>
    </body>