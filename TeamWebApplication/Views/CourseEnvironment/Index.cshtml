@model CourseAndComment
@{
    ViewData["Title"] = "Course Environment";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Courses</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CoursesStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CommentStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DeleteButtonStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PostStyle.css" asp-append-version="true" />
</head>

<body>
    <div class="ribbon">
        <div class="Name">
            <a class="text-style">Mudli</a>
        </div>
        <div class="logout-button">
            <a asp-action="Index" asp-controller="PublicCourse" class="text-style" style="text-decoration: none; color: #ffffff;">Public courses</a>
        </div>
        <div class="logout-button">
            <a asp-action="Index" asp-controller="Course" class="text-style" style="text-decoration: none; color: #ffffff;">My Courses</a>
        </div>
        <div class="logout-button">
            <a asp-action="Index" asp-controller="Home" class="text-style" style="text-decoration: none; color: #ffffff;">Log out</a>
        </div>
    </div>

    <div class="courses-header">
        <a>Posts</a>
    </div>

    <div>
        <div class="course-navigation-array">
            @if (Model.User.Role == Role.Lecturer)
            {
                <div class="logout-button">
                    <a asp-action="CreateTextPost" asp-controller="CourseEnvironment" asp-route-courseId="@Model.comment.CourseId" class="text-style" style="text-decoration: none; color: #ffffff;">Create Text Post</a>
                </div>
                <div class="logout-button">
                    <a asp-action="CreateLinkPost" asp-controller="CourseEnvironment" asp-route-courseId="@Model.comment.CourseId" class="text-style" style="text-decoration: none; color: #ffffff;">Create Link Post</a>
                </div>
            }
            
        </div>

        @foreach (Post post in Model.PostData)
        {
            <div class="post-container">
                <div class="post-header">
                    <div class="post-header-left">@post.Name</div>
                </div>
                <div class="post-body">
                    <div>
                        @Html.Raw(@post.DataToHtml())
                    </div>
                    <div class="post-button-container">
                        @switch (post.PostType)
                        {
                            case PostType.Text:
                                @if(Model.User.Role == Role.Lecturer)
                                {
                                    <a class="hidden-button" asp-action="EditTextPost" asp-controller="CourseEnvironment" asp-route-postId="@post.PostId">
                                        <button type="button" class="delete-button">
                                            <img class="delete-button" src="https://th.bing.com/th/id/OIP.4_sgSrCdA_8Jmfp8w9JUjAAAAA?pid=ImgDet&rs=1" alt="Image" />
                                        </button>
                                    </a>
                                    <div class="button-space"></div>
                                    <a class="hidden-button" asp-action="DeleteTextPost" asp-controller="CourseEnvironment" asp-route-postId="@post.PostId">
                                        <button type="button" class="delete-button">
                                            <img class="delete-button" src="https://static.vecteezy.com/system/resources/previews/009/921/243/large_2x/trash-glyph-round-corner-free-vector.jpg" alt="Image" />
                                        </button>
                                    </a>
                                }
                                break;
                            case PostType.Link:
                                @if (Model.User.Role == Role.Lecturer)
                                {
                                    <a class="edit-button" asp-action="EditLinkPost" asp-controller="CourseEnvironment" asp-route-postId="@post.PostId">
                                        <button type="button" class="delete-button">
                                            <img class="delete-button" src="https://th.bing.com/th/id/OIP.4_sgSrCdA_8Jmfp8w9JUjAAAAA?pid=ImgDet&rs=1" alt="Image" />
                                        </button>
                                    </a>
                                    <div class="button-space"></div>
                                    <a class="delete-button" asp-action="DeleteLinkPost" asp-controller="CourseEnvironment" asp-route-postId="@post.PostId">
                                        <button type="button" class="delete-button">
                                            <img class="delete-button" src="https://static.vecteezy.com/system/resources/previews/009/921/243/large_2x/trash-glyph-round-corner-free-vector.jpg" alt="Image" />
                                        </button>
                                    </a>
                                }
                                break;
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Displaying existing comments -->
        <div class="comment-container">
            <div class="comment-header">
                <h2 class="comments-label">Comments</h2>
            </div>

            <div class="comment-section">
                @foreach (var comment in Model.CommentData)
                {
                    <div class="comment">
                        <div class="comment-header">
                            <div class="comment-header-left">@comment.UsersNameThatCommented</div>
                            <div class="comment-header-right">@comment.CommentCreationTime.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                        <div class="comment-body">
                            <div style="display: block;" id="@comment.CommentId">
                                @comment.UserComment
                            </div>
                            @if (Model.LoggedInUser == comment.UserId)
                            {
                                <button class="delete-button" onclick="toggleTextareaVisibility(@comment.CommentId)"> <img class="delete-button" src="https://th.bing.com/th/id/OIP.4_sgSrCdA_8Jmfp8w9JUjAAAAA?pid=ImgDet&rs=1" alt="Image" /></button>
                                <div style="display: none;" class="comment-form1" id="@comment.CommentId">
                                    <form method="post" asp-action="EditComment" asp-route-courseId="@Model.comment.CourseId" asp-controller="CourseEnvironment">
                                        <input type="hidden" id="CourseId" name="CourseId" asp-for="@Model.comment.CourseId" value="@Model.comment.CourseId" />
                                        <input type="hidden" id="CommentId" name="CommentId" asp-for="@Model.comment.CommentId" value="@comment.CommentId" />
                                        <textarea name="UserComment" id="UserComment" rows="3" cols="50">@comment.UserComment</textarea>
                                        <button type="submit" class="delete-button">
                                            <img class="delete-button" src="https://th.bing.com/th/id/OIP.rXCLqHg2p4SkI0mkJfrw6gHaHa?pid=ImgDet&rs=1" alt="Image" />
                                        </button>
                                    </form>
                                </div>

                                <form onsubmit="return confirm('Are you sure you want to delete this course?');" method="post" asp-action="Delete" asp-route-courseId="@Model.comment.CourseId" asp-controller="CourseEnvironment">
                                    <input type="hidden" id="CourseId" name="CourseId" asp-for="@Model.comment.CourseId" value="@Model.comment.CourseId" />
                                    <input type="hidden" id="CommentId" name="CommentId" asp-for="@Model.comment.CommentId" value="@comment.CommentId" />
                                    <button type="submit" class="delete-button" onclick="storeScrollPosition(@comment.CommentId)">
                                        <img class="delete-button" src="https://static.vecteezy.com/system/resources/previews/009/921/243/large_2x/trash-glyph-round-corner-free-vector.jpg" alt="Image" />
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <div id="comment-form" class="comment-form" style="display: block;">
            <form asp-action="AddComment" asp-controller="CourseEnvironment" method="post">
                <input type="hidden" id="CourseId" name="CourseId" asp-for="@Model.comment.CourseId" value="@Model.comment.CourseId" />
                <input type="hidden" id="CommentId" name="CommentId" asp-for="@Model.comment.CommentId" value="@Model.comment.CommentId" />
                <div class="form-group">
                    <div class="textarea-container">
                        <textarea name="UserComment" id="UserComment" asp-for="@Model.comment.UserComment" rows="3" cols="50" placeholder="Write your comment here" required></textarea>
                        <button type="submit" class="button">Submit</button>
                    </div>
                </div>
            </form>
        </div>
</body>
</html>

<script>
    function toggleTextareaVisibility(commentId) {
        var elements = document.querySelectorAll(`[id="${commentId}"]`); // Update the textarea id
        console.log(elements)
        elements.forEach(element => {
            if (element.style.display === "none") {
                element.style.display = "block";
            } else {
                element.style.display = "none";
            }
        }
        )
    }
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>