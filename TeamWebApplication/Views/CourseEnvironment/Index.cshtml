@model TeamWebApplication.Models.CourseAndComment
@{
    ViewData["Title"] = "Course Environment";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Courses</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CoursesStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CommentStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DeleteButtonStyle.css" asp-append-version="true" />
</head>

<div class="ribbon">
    <div class="Name">
        <a class="text-style">Mudli</a>
    </div>
    <div class="logout-button">
        <a asp-action="Index" asp-controller="Home" class="text-style" style="text-decoration: none; color: #ffffff;">Log out</a>
    </div>
</div>
@foreach (Post post in Model.PostData)
{
    @switch (post.postType)
    {
        case PostType.Text:
            <p>@post.DataToString()</p>
            break;
        case PostType.Link:
            <a href="@post.DataToString() target="_blank"">@post.DataToString()</a>
            break;
    }
}

<!-- Displaying existing comments -->
<div class="comment-container">
    <div class="comment-header">
        <h2 class="comments-label">Comments</h2>
    </div>

    <div class="comment-section">
        @foreach (var comment in Model.CommentData)
        {
            <div class="comment">
                <div class="comment-header">
                    <div class="comment-header-left">@comment.UsersNameThatCommented</div>
                    <div class="comment-header-right">@comment.CommentCreationTime.ToString("yyyy-MM-dd HH:mm:ss")</div>
                </div>

                <div class="comment-body">
                    @comment.UserComment
                    <button asp-action="DeleteComment" asp-route-courseId="@Model.comment.CourseId" asp-controller="CourseEnvironment" method="post" class="delete-button">
                        <img class="delete-button" src="https://static.vecteezy.com/system/resources/previews/009/921/243/large_2x/trash-glyph-round-corner-free-vector.jpg" alt="Image" />
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<div id="comment-form" class="comment-form" style="display: block;">
    <form asp-action="AddComment" asp-route-courseId="@Model.comment.CourseId" asp-controller="CourseEnvironment" method="post">
        <div class="form-group">
            <div class="textarea-container">
                <textarea name="comment.UserComment" id="@Model.comment.UserComment" rows="3" cols="50" placeholder="Write your comment here" required></textarea>
                <button type="submit" class="button">Submit</button>
            </div>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
