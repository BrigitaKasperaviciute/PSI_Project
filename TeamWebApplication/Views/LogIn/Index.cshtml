        <a href="#" class="forgot-password-link">
            <span style="color: #714770;">Forgot password? </span>
        </a>
    <button type="submit" class="btn-primary">Sign in</button>
    <!-- Use a fieldset to group related form elements -->
        <a  class="registration-link" asp-action="Index" asp-controller="Registration">
            <span style="color: #f5eff5;">Don't have an account? </span>
            <b>Register here...</b>
        </a>
</form>
